<!DOCTYPE html>
<html>
<head>
  <title>Private Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <div class="bg-white p-8 rounded-xl shadow text-center max-w-sm">

    <img src="profileUser.profilepic %>" 
         class="w-24 h-24 rounded-full mx-auto mb-4">

    <h2 class="text-lg font-semibold">
      <%= profileUser.username %>
    </h2>

    <p class="text-gray-500 mt-2">
      This account is private ðŸ”’
    </p>

    <p class="text-sm text-gray-400 mt-2">
      Follow to see their posts and profile.
    </p>

    <!-- FOLLOW / REQUEST BUTTON -->
    <div class="mt-4">

      <% 
        const hasRequested = profileUser.followRequests.includes(currentUser._id);
      %>

      <% if (hasRequested) { %>
        <button 
          class="px-4 py-2 bg-gray-400 text-white rounded cursor-not-allowed">
          Request Sent
        </button>
      <% } else { %>
        <a href="/follow/<%= profileUser._id %>">
          <button class="px-4 py-2 bg-blue-500 text-white rounded">
            Follow
          </button>
        </a>
      <% } %>

    </div>

    <div class="mt-4">
      <a href="/feed" class="text-blue-500 text-sm hover:underline">
        Back to Feed
      </a>
    </div>

  </div>

</body>
</html>
