<!DOCTYPE html>
<html>
<head>
  <title>Post</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

<!-- Navbar -->
<div class="bg-white shadow px-6 py-4 flex justify-between">
  <a href="/notifications" class="text-blue-500 font-medium">‚Üê Back to Notifications</a>
  <a href="/feed" class="text-blue-500 font-medium">Feed</a>
</div>

<div class="max-w-xl mx-auto mt-8 bg-white p-6 rounded shadow">

  <!-- Author -->
  <div class="flex items-center gap-3">
    <img src="<%= post.user.profilepic %>"
      class="w-10 h-10 rounded-full object-cover border"
    />
    <span class="font-semibold text-gray-700">
      <%= post.user.username %>
    </span>
  </div>

  <!-- Date -->
  <p class="text-xs text-gray-400 mt-1">
    <%= new Date(post.date).toLocaleString() %>
  </p>
  <% if (currentUser.role === "admin" || currentUser.role === "moderator") { %>
    <a href="/moderate/post/delete/<%= post._id %>"
      onclick="return confirm('Delete this post?')">
      <button style="color:red;">Delete</button>
    </a>
  <% } %>

  <!-- Content -->
  <p class="text-gray-700 mt-3">
    <%= post.content %>
  </p>

  <!-- Likes -->
  <div class="mt-3 text-sm">
    <a href="/flike/<%= post._id %>" class="text-blue-500 hover:underline">
      <%= post.likes.includes(currentUser.userid) ? "Unlike" : "Like" %>
    </a>
    (<%= post.likes.length %>)
  </div>

  <!-- Comments -->
  <div class="mt-4 border-t pt-3">
    <h4 class="font-semibold text-gray-700 mb-2">Comments</h4>

    <% if (post.comments.length > 0) { %>
      <% post.comments.forEach(c => { %>
        <div class="text-sm text-gray-700 mb-1">
          <strong><%= c.user.username %></strong>: <%= c.text %>
          <% if (currentUser.role === "admin" || currentUser.role === "moderator") { %>
            <a href="/moderate/comment/delete/<%= post._id %>/<%= c._id %>"
              onclick="return confirm('Delete this comment?')">
              <button style="color:red; font-size:12px;">Delete</button>
            </a>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-sm text-gray-400">No comments yet</p>
    <% } %>
  </div>

  <!-- Add comment -->
  <form action="/comment/<%= post._id %>" method="POST" class="mt-3 flex gap-2">
    <input
      type="text"
      name="text"
      placeholder="Write a comment..."
      class="flex-1 border rounded px-2 py-1 text-sm"
      required
    />
    <button 
      type="submit"
      class="bg-blue-500 text-white text-sm px-3 py-1 rounded">
      Post
    </button>
  </form>

</div>

</body>
</html>
